{
    "include": [
        "./**/*"
    ],
    "compilerOptions": {
        "allowJs": false,
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "lib": [
            "es2015",
            "es2015.generator"
        ],
        "incremental": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "alwaysShowRuleFailuresAsWarnings": false,
                "ignoreDefinitionFiles": true,
                "configFile": "./tslint.json",
                "suppressWhileTypeErrorsPresent": false
            }
        ]
    }
}